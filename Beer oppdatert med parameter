# printer ut det verset som passer overens med parameter(antall flasker).
def printvers(beer):
	if beer == 1:
		bottles="bottle"
	else:
		bottles="bottles"
	print(str(beer) + " "+bottles+" of beer on the wall, "+str(beer)+" "+bottles+" of beer")
	if beer-1 == 1:
		bottles="bottle"
	else:
		bottles="bottles"
	print(" Take one down, pass it around, "+str(beer-1)+" "+bottles+" of beer on the wall...")
	bottles="bottles"

def sistevers():
	print(" No more bottles of beer on the wall, no more bottles of beer")
	print(" Go to the store and buy some more, 99 bottles of beer on the wall...")
	
	
	
	
for beer in range(99, 0, -1):
	printvers(beer)
print(sistevers())

